<%-include('../partials/header.ejs') %>
    <section class='content'>
        <div class='formLayout'>
            <form action='/connections' method='POST'>
                <div class='formLabels'>
                    <ul>
                        <li> <label for='topic'>Topic</label></li>
                        <li> <label for='tagLine'>TagLine</label></li>
                        <li><label for='name'>Title</label></li>
                        <li> <label for='details'>Decription</label></li>
                        <li> <label for='address'>Where</label></li>
                        <li> <label for='date'>When</label></li>
                        <li> <label for='startTime'>Start</label></li>
                        <li> <label for='endTime'>End</label></li>
                        <li> <label for='image'>Add image url for the event</label></li>
                    </ul>
                </div>
                <div class='formData'>
                    <ul>
                        <li><input type='text' id='topic' name='topic' class='topic' placeholder='Enter the topic name' minlength="3" required>
                        </li>
                        <li><input type='text' id='tagLine' name='tagLine' class='tagLine'
                                placeholder='Enter the tagLine name'  minlength="3" required></li>
                        <li><input type='text' id='name' name='name' class='name' placeholder='Enter the title' minlength="3" required></li>
                        <li><input type='text' id='details' name='details' class='details'
                                placeholder='Enter the description' minlength='10' required></li>
                        <li><input type='text' id='address' name='address' class='address'
                                placeholder='Enter the location' required></li>
                        <li><input type='date' id='date' name='date' class='date' required></li>
                        <li><input type='time' id='startTime' name='startTime' class='startTime' required></li>
                        <li><input type='time' id='endTime' name='endTime' class='endTime' required></li>
                        <li><input type='text' id='image' name='image' class='image' placeholder='Enter the image url' required >
                        </li>
                        <li> <button type='submit' class='submitButton'>Create Event </button></li>
                    </ul>
                </div>
                <br> <br> <br><br><br><br>
            </form>
        </div>
    </section>
    <br /> <br />
    <%-include('../partials/footer.ejs') %>